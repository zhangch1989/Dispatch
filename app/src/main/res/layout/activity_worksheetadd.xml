<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/color_top">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增工单"
            style="@style/top_title"/>
        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="@dimen/top_back_width"
            android:layout_height="@dimen/top_back_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/top_back_marginleft"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@mipmap/btn_back"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/detail_str"
                android:text="客户姓名："/>
            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="请输入客户姓名（必填）"
                style="@style/detail_value"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            style="@style/detail_line"
            android:background="@color/color_driver"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/detail_str"
                android:text="联系电话："/>
            <EditText
                android:id="@+id/ed_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="11"
                android:text=""
                android:hint="请输入联系电话（必填）"
                style="@style/detail_value"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            style="@style/detail_line"
            android:background="@color/color_driver"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/detail_str"
                android:text="地址："/>
            <Spinner
                android:id="@+id/sp_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/detail_value"
                ></Spinner>
            <Spinner
                android:id="@+id/sp_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/detail_value"
                ></Spinner>
        </LinearLayout>
        <EditText
            android:id="@+id/ed_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="街道、小区及楼栋门牌号"
            style="@style/detail_value"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            style="@style/detail_line"
            android:background="@color/color_driver"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/detail_str"
                android:text="责任人："/>
            <EditText
                android:id="@+id/ed_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="请输入责任人"
                style="@style/detail_value"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            style="@style/detail_line"
            android:background="@color/color_driver"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/detail_str"
                android:text="客户要求："/>
            <EditText
                android:id="@+id/ed_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:lines="3"
                android:text=""
                android:gravity="top"
                android:hint="请输入客户需求（必填）"
                style="@style/detail_value"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            style="@style/detail_line"
            android:background="@color/color_driver"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/detail_str"
                android:text="备注："/>
            <EditText
                android:id="@+id/ed_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:lines="2"
                android:text=""
                android:gravity="top"
                style="@style/detail_value"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            style="@style/detail_line"
            android:background="@color/color_driver"/>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_bluebg"
            android:layout_marginTop="20dp"
            android:text="提交工单"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
